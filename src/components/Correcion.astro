---
interface Props {
    img : string;
    title : string;
    description : string;
    link : string;
}

const {img , title, description, link} = Astro.props;
---

<div class="flex items-stretch gap-4 item transition-colors duration-500 hover:bg-info hover:shadow-2xl rounded-lg p-1 sm:p-3 bloque">
    <img
      src={img}
      title={title}
      alt={title}
      loading="lazy"
      class="aspect-square w-[40%] sm:w-[150px] object-fill rounded-lg shadow-lg"
    />
  
    <div>
      <h3 class=" text-lg font-bold text-primary text-justify italic">{title}</h3>
  
      <p class="mt-0.5 text-gray-700 text-justify line-clamp-4">
        {description}
      </p>

      <a href={link}
      class="text-md table text-gray-500 font-semibold mt-4 transition-transform duration-200 hover:text-black hover:translate-x-2"
      target="_blank"
      rel="noopener noreferrer"
      >Saber mas
    </a>
    </div>
  </div>