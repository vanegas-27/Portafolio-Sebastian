---
const contenido = await Astro.glob("../content/correciones/*.md");
import Correcion from "./Correcion.astro";
---

<section class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8 lg:py-16">

    <h2 class="text-primary text-3xl font-bold sm:text-5xl flex gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-apps size-8 sm:size-12 opacity-75 stroke-primary" viewBox="0 0 24 24" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M4 4m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z" />
        <path d="M4 14m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z" />
        <path d="M14 14m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z" />
        <path d="M14 7l6 0" />
        <path d="M17 4l0 6" />
      </svg>
      Correcciones de estilo
    </h2>

    <article class="my-10 gap-3 justify-around sm:justify-center grid grid-cols-1 md:grid-cols-2 xl2:grid-cols-3">

      {
        contenido.map( item => {
          return <Correcion
            img={item.frontmatter.img}
            title={item.frontmatter.title}
            description={item.frontmatter.description}
            link={item.frontmatter.link}
          />
        })
      }

    </article>
</section>