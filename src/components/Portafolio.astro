---
const contenido = await Astro.glob('../content/*.md');
import Proyecto from "./Proyecto.astro";
---


<section class="text-black" id="Portafolio">

    <div class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8 lg:py-16">

        <h2 class="flex flex-wrap gap-2 text-primary text-3xl font-bold sm:text-4xl">
          <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-headlessui size-8 sm:size-12 opacity-75 stroke-primary" viewBox="0 0 24 24" stroke-width="2"  fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M6.744 4.325l7.82 -1.267a4.456 4.456 0 0 1 5.111 3.686l1.267 7.82a4.456 4.456 0 0 1 -3.686 5.111l-7.82 1.267a4.456 4.456 0 0 1 -5.111 -3.686l-1.267 -7.82a4.456 4.456 0 0 1 3.686 -5.111z" />
            <path d="M7.252 7.704l7.897 -1.28a1 1 0 0 1 1.147 .828l.36 2.223l-9.562 3.51l-.67 -4.134a1 1 0 0 1 .828 -1.147z" />
          </svg>
          Explora mi portafolio
        </h2>

        {
          contenido.map( item => {
            return <Proyecto
              img={item.frontmatter.img}
              title={item.frontmatter.title}
              company= {item.frontmatter.company}
              description={item.frontmatter.description}
              alt={item.frontmatter.alt}
              url={item.frontmatter.url}
              
            />
          })
        }
  
    </div>
  </section>