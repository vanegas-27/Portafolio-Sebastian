---
// Supports weights 400-800
import '@fontsource-variable/eb-garamond';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/avif" href="/favicon.svg" />
		<title>{title}</title>

		<link rel="stylesheet" href="./css/styles.css">
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	:root{
		scroll-behavior: smooth;
		background-color: #bfb3a4;
		--setex: font-family: 'EB Garamond Variable', serif;

	}
	
	*{
		font-family: var(--setex);
	}

</style>
